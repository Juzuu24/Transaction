<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <header class="header">
    <div class="logo"><img src="/source/logo.png" alt="Logo" class="logo"></div>
    <div class="brand">CHAINX</div>
    <div class="search-bar">
      <i class="fas fa-bars"></i>
      <input type="text" placeholder="Search">
      <i class="fas fa-search"></i>
    </div>
    <i class="fas fa-bell notification-icon"></i>
  </header>

  <div class="carousel">
    <div class="carousel-images">
      <img src="/source/graph1.png" alt="Chart 1">
      <img src="/source/graph2.png" alt="Chart 2">
      <img src="/source/graph3.png" alt="Chart 3">
      <img src="/source/graph4.png" alt="Chart 4">
    </div>
    <button class="prev">&#10094;</button>
    <button class="next">&#10095;</button>
  </div>

  <div class="stats">
    <div class="card">
      <i class="fas fa-dollar-sign"></i>
      <p>BALANCE<br><strong>$<%= balance %></strong></p>
    </div>
    <div class="card">
        <i class="fas fa-wallet"></i>
        <p>Monthly CashIn<br><strong>$<%= monthlyCashIn %></strong></p>
    </div>
    <div class="card">
        <i class="fas fa-sack-dollar"></i>
        <p>Monthly CashOut<br><strong>$<%= monthlyCashOut %></strong></p>
    </div>
</div>
    

  <div class="actions">
    <div class="action-box" onclick="navigateTo('/withdraw')">
      <i class="fas fa-money-bill-wave"></i><p>WITHDRAW</p>
    </div>
    <div class="action-box" onclick="navigateTo('/deposit')">
      <i class="fas fa-coins"></i><p>DEPOSIT</p>
    </div>
    <div class="action-box" onclick="navigateTo('/event')">
      <i class="fas fa-receipt"></i><p>EVENTS</p>
    </div>
    <div class="action-box" onclick="navigateTo('/checkin')">
      <i class="fas fa-clipboard-check"></i><p>DAILY CHECKIN</p>
    </div>
  </div>

  <div class="actions">
    <div class="action-box" onclick="navigateTo('/order')">
      <i class="fas fa-money-bill-wave"></i><p>Order</p>
    </div>
    <div class="action-box" onclick="navigateTo('/illustrate')">
      <i class="fas fa-clipboard-check"></i><p>Illustrate</p>
    </div>
    <div class="action-box" onclick="navigateTo('/aboutus')">
      <i class="fas fa-coins"></i><p>About Us</p>
    </div>
    <div class="action-box" onclick="navigateTo('/faq')">
      <i class="fas fa-receipt"></i><p>FAQs</p>
    </div>
   
  </div>
  

 <%- include('partials/footer', { active: 'dashboard' }) %> <!-- for home page -->
 <%- include('partials/footer', { active: 'transactions' }) %> <!-- for transactions -->
 <%- include('partials/footer', { active: 'order' }) %> <!-- for order -->
 <%- include('partials/footer', { active: 'service' }) %> <!-- for service -->
 <%- include('partials/footer', { active: 'profile' }) %> <!-- for profile -->


 

  <script >
    const carousel = document.querySelector('.carousel-images');
    const images = document.querySelectorAll('.carousel-images img');
    const prevBtn = document.querySelector('.prev');
    const nextBtn = document.querySelector('.next');

    let index = 0;

    function showSlide(i) {
    const width = images[0].clientWidth;
    carousel.style.transform = `translateX(${-width * i}px)`;
    }

    prevBtn.addEventListener('click', () => {
    index = (index - 1 + images.length) % images.length;
    showSlide(index);
    });

    nextBtn.addEventListener('click', () => {
    index = (index + 1) % images.length;
    showSlide(index);
    });

    // Optional: auto-slide
    setInterval(() => {
    index = (index + 1) % images.length;
    showSlide(index);
    }, 5000);

   
  function navigateTo(path) {
    window.location.href = path;
  }



  </script>
</body>
</html>
