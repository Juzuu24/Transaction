<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
  <h2>Deposits</h2>
  <a href="/deposits/add" class="btn btn-primary mb-3">Add Deposit</a>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th><th>User ID</th><th>Amount</th><th>Method</th><th>Account</th><th>Date</th><th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% deposits.forEach(d => { %>
        <tr>
          <td><%= d.deposit_id %></td>
          <td><%= d.id %></td>
          <td>$<%= d.amount %></td>
          <td><%= d.method %></td>
          <td><%= d.account %></td>
          <td><%= d.created_at.toISOString().slice(0, 19).replace('T', ' ') %></td>
          <td>
            <a href="/deposits/edit/<%= d.deposit_id %>" class="btn btn-warning btn-sm">Edit</a>
            <a href="/deposits/delete/<%= d.deposit_id %>" class="btn btn-danger btn-sm" onclick="return confirm('Delete this deposit?')">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
</body>
</html>
