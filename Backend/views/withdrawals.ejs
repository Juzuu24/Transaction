<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
  <h2>Withdrawals</h2>
  <a href="/withdrawals/add" class="btn btn-primary mb-3">Add Withdrawal</a>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th><th>User ID</th><th>Amount</th><th>Method</th><th>Account</th><th>Date</th><th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% withdrawals.forEach(w => { %>
        <tr>
          <td><%= w.withdraw_id %></td>
          <td><%= w.id %></td>
          <td>$<%= w.amount %></td>
          <td><%= w.method %></td>
          <td><%= w.account %></td>
          <td><%= w.created_at.toISOString().slice(0, 19).replace('T', ' ') %></td>
          <td>
            <a href="/withdrawals/edit/<%= w.withdraw_id %>" class="btn btn-warning btn-sm">Edit</a>
            <a href="/withdrawals/delete/<%= w.withdraw_id %>" class="btn btn-danger btn-sm" onclick="return confirm('Delete this withdrawal?')">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
</body>
</html>
