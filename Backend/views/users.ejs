<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
  <h2>User List</h2>
  <a href="/users/add" class="btn btn-primary mb-3">Add New User</a>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th><th>Username</th><th>Phone</th><th>Email</th><th>Balance</th><th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.username %></td>
          <td><%= user.phone_number %></td>
          <td><%= user.email %></td>
          <td>$<%= user.balance %></td>
          <td>
            <a href="/users/edit/<%= user.id %>" class="btn btn-sm btn-warning">Edit</a>
            <a href="/users/delete/<%= user.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Delete this user?')">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
</body>
</html>
