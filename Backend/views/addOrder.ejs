<!DOCTYPE html>
<html>
<head><title>New Setting</title></head>
<body>
  <h1>New User Setting</h1>
  <form method="POST" action="/order/add">
    <label>User:</label>
    <select name="user_id" required>
      <% users.forEach(user => { %>
        <option value="<%= user.id %>"><%= user.username %></option>
      <% }) %>
    </select><br/>
    <label>Lucky Frequency:</label>
    <input type="number" name="lucky_frequency" required><br/>
    <label>Lucky Daily Limit:</label>
    <input type="number" name="lucky_daily_limit" required><br/>
    <button type="submit">Create</button>
  </form>
